{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "clearMocks": true,
  "projects": [
    {
      "displayName": "application-template",
      "clearMocks": true,
      "rootDir": "./apps/application-template/",
      "testRegex": "\\.e2e-spec\\.ts$",
      "transform": {
        "^.+\\.(t|j)sx?$": "@swc/jest"
      },
      "moduleNameMapper": {
        "^@user(.*)$": "<rootDir>/src/module/user/$1",
        "^@common(.*)$": "<rootDir>/src/common/$1",
        "^@libs(.*)$": "<rootDir>/../../libs/$1"
      }
    }
  ],
  "testEnvironment": "node"
}
